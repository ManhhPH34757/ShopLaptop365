package com.shoplaptop.ui;

import java.awt.EventQueue;

import javax.swing.JDialog;
import javax.swing.JButton;
import java.awt.Font;
import java.awt.Color;
import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;

@SuppressWarnings("serial")
public class SelectFunction extends JDialog {

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					SelectFunction dialog = new SelectFunction();
					dialog.setDefaultCloseOperation(JDialog.DISPOSE_ON_CLOSE);
					dialog.setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the dialog.
	 */
	public SelectFunction() {
		getContentPane().setBackground(new Color(0, 168, 168));
		setBounds(100, 100, 700, 390);
		getContentPane().setLayout(null);
		
		JButton btnNewButton = new JButton("Quản lý Nhân viên");
		btnNewButton.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				new NhanVienManager().setVisible(true);
				new ShopLaptop365().setVisible(false);
			}
		});
		btnNewButton.setBorderPainted(false);
		btnNewButton.setBackground(new Color(198, 201, 206));
		btnNewButton.setFont(new Font("Times New Roman", Font.PLAIN, 24));
		btnNewButton.setBounds(49, 102, 256, 120);
		getContentPane().add(btnNewButton);
		
		JButton btnQunLMc = new JButton("Quản lý mục khác");
		btnQunLMc.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				dispose();
			}
		});
		btnQunLMc.setBorderPainted(false);
		btnQunLMc.setBackground(new Color(198, 201, 206));
		btnQunLMc.setFont(new Font("Times New Roman", Font.PLAIN, 24));
		btnQunLMc.setBounds(382, 102, 256, 120);
		getContentPane().add(btnQunLMc);

	}

	public SelectFunction(ShopLaptop365 owner, boolean modal) {
		super(owner, modal);
		getContentPane().setBackground(new Color(0, 168, 168));
		setBounds(100, 100, 700, 390);
		getContentPane().setLayout(null);
		
		JButton btnNewButton = new JButton("Quản lý Nhân viên");
		btnNewButton.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				new NhanVienManager().setVisible(true);
			}
		});
		btnNewButton.setBorderPainted(false);
		btnNewButton.setBackground(new Color(198, 201, 206));
		btnNewButton.setFont(new Font("Times New Roman", Font.PLAIN, 24));
		btnNewButton.setBounds(49, 102, 256, 120);
		getContentPane().add(btnNewButton);
		
		JButton btnQunLMc = new JButton("Quản lý mục khác");
		btnQunLMc.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				dispose();
			}
		});
		btnQunLMc.setBorderPainted(false);
		btnQunLMc.setBackground(new Color(198, 201, 206));
		btnQunLMc.setFont(new Font("Times New Roman", Font.PLAIN, 24));
		btnQunLMc.setBounds(382, 102, 256, 120);
		getContentPane().add(btnQunLMc);

	}
}
