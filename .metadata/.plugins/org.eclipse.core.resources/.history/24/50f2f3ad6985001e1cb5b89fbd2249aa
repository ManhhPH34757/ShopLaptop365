package com.shoplaptop.dao;

import java.sql.ResultSet;
import java.util.ArrayList;
import java.util.List;

import com.shoplaptop.entity.CTHoaDon;
import com.shoplaptop.utils.XJdbc;

public class CTHoaDonDAO implements ShopLaptop365DAO<CTHoaDon, String>{
	String SelectCTHoaDon_SQL = "SELECT dbo.HoaDon.ID AS 'ID_HoaDon', dbo.HoaDon.MaHD ,dbo.Serial.ID AS 'ID_Serial', dbo.Serial.SerialNumber \r\n"
			+ "FROM dbo.CTHoaDon JOIN dbo.HoaDon ON HoaDon.ID = CTHoaDon.MaHD\r\n"
			+ "	JOIN dbo.Serial ON Serial.ID = CTHoaDon.ID_Serial";
	@Override
	public String insert(CTHoaDon entity) {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
