				} catch (Exception e) {
					e.printStackTrace();
				}
			}
		});
	}

	/**
	 * Create the frame.
	 */
	public ShopLaptop365() {
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 1070, 735);
		setLocationRelativeTo(null);
		setIconImage(new XImage().getAppIcon());
		
		JMenuBar menuBar = new JMenuBar();
		setJMenuBar(menuBar);
		
		JMenu mnHeThong = new JMenu("Hệ thống");
		menuBar.add(mnHeThong);
		
		JMenuItem mntmDangXuat = new JMenuItem("Đăng xuất");
		mnHeThong.add(mntmDangXuat);
		
		JMenu mnQuanLy = new JMenu("Quản lý");
		menuBar.add(mnQuanLy);
		
		JMenuItem mntmNewMenuItem_1 = new JMenuItem("Khách hàng");
		mnQuanLy.add(mntmNewMenuItem_1);
		
		JMenuItem mntmNewMenuItem_2 = new JMenuItem("Đơn hàng");
		mnQuanLy.add(mntmNewMenuItem_2);
		
		JMenuItem mntmHan = new JMenuItem("Hóa đơn");
		mnQuanLy.add(mntmHan);
		
		JMenuItem mntmNewMenuItem_3 = new JMenuItem("Laptop");
		mnQuanLy.add(mntmNewMenuItem_3);
		
		JMenuItem mntmNewMenuItem_4 = new JMenuItem("Phiếu giảm giá");
		mnQuanLy.add(mntmNewMenuItem_4);
		
		JMenuItem mntmNewMenuItem_5 = new JMenuItem("Đợt giảm giá");
		mnQuanLy.add(mntmNewMenuItem_5);
		
		JMenuItem mntmNewMenuItem_6 = new JMenuItem("Phiếu đổi trả");
		mnQuanLy.add(mntmNewMenuItem_6);
		
		JMenuItem mntmNewMenuItem_7 = new JMenuItem("Nhân viên");
		mnQuanLy.add(mntmNewMenuItem_7);
		
		JMenu mnNewMenu_2 = new JMenu("Thông tin cá nhân");
		menuBar.add(mnNewMenu_2);
		
		JMenuItem mntmNewMenuItem = new JMenuItem("Cập nhật thông tin cá nhân");
		mnNewMenu_2.add(mntmNewMenuItem);
		contentPane = new JPanel();
		contentPane.setBorder(new EmptyBorder(5, 5, 5, 5));

		setContentPane(contentPane);
		contentPane.setLayout(null);
		
		JToolBar toolBar = new JToolBar();
		toolBar.setBounds(10, 10, 1046, 56);
		contentPane.add(toolBar);
		
		JButton btnNewButton = new JButton("New button");
		btnNewButton.setHorizontalTextPosition(SwingConstants.CENTER);
		btnNewButton.setVerticalTextPosition(SwingConstants.BOTTOM);
		btnNewButton.setIcon(new ImageIcon(ShopLaptop365.class.getResource("/com/shoplaptop/icon/Exit.png")));
		btnNewButton.setFont(new Font("Times New Roman", Font.PLAIN, 18));
		toolBar.add(btnNewButton);
		
		new HelloWindows(this, true).setVisible(true);
		new Login(this, true).setVisible(true);
		if (!Auth.isManager()) {
			mntmNewMenuItem_7.setEnabled(false);
		}
		setResizable(false);
